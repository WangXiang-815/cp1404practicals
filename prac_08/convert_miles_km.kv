BoxLayout:
    orientation:'vertical'

    #Top section
    BoxLayout:
        orientation:'horizontal'
        #TextInput
        TextInput:
            id: input_miles
            text:''
            font_size: 48
            multiline: False
            size_hint_x: 0.85  #change size for more spaces

        #up and down button
        BoxLayout:
            orientation:'vertical'
            size_hint_x: 0.15 #changes to smaller size
            #Up button
            Button:
                text:'Up'
                on_press: app.handle_up()
            #Down button
            Button:
                text:'Down'
                on_press: app.handle_down()

    #Middle section
    Button:
        text:'Convert miles to kilometers'
        on_press: app.handle_convert()

    #Bottom section
    Label:
        id: output_label
        font_size: 48
        color: (1, 1, 0, 1) # Yellow RGBA
