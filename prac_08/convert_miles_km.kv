BoxLayout:
    orientation:'vertical'

    #Top section
    BoxLayout:
        orientation:'horizontal'
        #TextInput
        TextInput:
            id: input_miles
            text:''
            font_size: 48
            multiline: False

        #up and down button
        BoxLayout:
            orientation:'vertical'
            #Up button
            Button:
                text:'Up'
                on_press: app.handle_up()
            #Down button
            Button:
                text:'Down'
                on_press: app.handle_down()

    #Middle section
    Label:
        text:'Convert miles to kilometers'

    #Bottom section
    Label:
        id: output_label
        font_size: 48
